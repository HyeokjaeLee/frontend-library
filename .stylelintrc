{
  "extends": ["stylelint-config-tailwindcss", "@hyeokjaelee/stylelint-config"],
  "ignoreFiles": [
    ".storybook/**/*",
    "**/*.js",
    "**/*.jsx",
    "**/*.ts",
    "**/*.tsx",
    "**/*.mjs",
    "node_modules/**/*",
    "build/**/*",
    "dist/**/*",
    "public/**/*"
  ],
  "rules": {
    "at-rule-no-unknown": null,
    "scss/at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "use",
          "forward",
          "tailwind",
          "apply",
          "variants",
          "responsive",
          "screen"
        ]
      }
    ]
  }
}
